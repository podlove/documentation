#!/usr/bin/env ruby

#########################
##### COMPILATION

compile '/assets/css/*' do
  nil # use compass separately
end

compile '/assets/js/*' do
end

compile '*' do
  if item.binary?
    # donâ€™t filter binary items
  else
    filter :erb
    filter :syntax_highlight
    filter :kramdown
    layout 'default'
    filter :add_toc
    filter :typogruby
  end
end

#########################
###### ROUTING

route '/assets/css/*/' do
  nil # use compass separately
end

route '/assets/js/*/' do
  item.identifier.chop + '.' + item[:extension]
end

route '*' do
  if item.binary?
    # Write item with identifier /foo/ to /foo.ext
    item.identifier.chop + '.' + item[:extension]
  else
    # Write item with identifier /foo/ to /foo/index.html
    item.identifier + 'index.html'
  end
end

layout '*', :erb
